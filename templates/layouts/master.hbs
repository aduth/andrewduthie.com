<!doctype html>
<html>
<head>
  {{> head }}
  <meta property="og:title" content="Andrew Duthie">
  <meta property="og:type" content="profile">
  <meta property="og:url" content="{{ site.url }}/">
  <meta property="profile:first_name" content="Andrew">
  <meta property="profile:last_name" content="Duthie">
  <meta property="profile:gender" content="male">

  <title>{{ default title "Home" }} | {{ site.title }}</title>
</head>
<body>

<header class="intro">
  <div class="container about-me" itemscope itemtype="http://schema.org/Person">
    <span class="headshot">
      <img src="/assets/img/andrew.png" alt="Andrew Duthie" width="135" height="135" itemprop="image">
    </span>
    <h1 itemprop="name">Andrew Duthie</h1>
    {{> me-links }}
    <p itemprop="description">Cincinnati-based <span itemprop="jobTitle">developer and modern web enthusiast</span> with a passion for front-end web development and open source.</p>
  </div>
</header>

<div class="container main-content">
  {{> body }}
</div>

{{> footer }}

{{> javascripts }}

</body>
</html>