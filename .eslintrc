{
	"root": true,
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier", "react"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"es6": true
	},
	"rules": {
		"react/jsx-uses-vars": "error",
		"no-empty": ["error", { "allowEmptyCatch": true }],
		"prefer-const": "error"
	}
}
