{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"moduleResolution": "node",
		"jsx": "preserve",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"#components/*": ["./components/*"],
			"#layouts/*": ["./layouts/*"]
		}
	},
	"include": ["packages", "components", "layouts"]
}
